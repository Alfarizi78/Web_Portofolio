<section class="hero">
  <div class="content">
    <h1 class="glitch-text">PORTOFOLIO</h1>
    <p class="subtitle">Selamat Datang di Dunia Kreativitas Saya</p>
    <div class="scroll-indicator">
      <span>Scroll Down</span>
      <div class="arrow"></div>
    </div>
  </div>
</section>

<style>
  .hero {
    height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    position: relative;
  }

  .content {
    text-align: center;
    z-index: 1;
  }

  .glitch-text {
    font-size: 5rem;
    font-weight: bold;
    text-transform: uppercase;
    position: relative;
    text-shadow: 
      2px 2px #ff0000,
      -2px -2px #0000ff;
    animation: glitch 3s infinite;
  }

  .subtitle {
    font-size: 1.5rem;
    margin-top: 1rem;
    color: #FFD700;
    opacity: 0;
    animation: fadeIn 1s ease-out forwards;
    animation-delay: 1s;
  }

  @keyframes glitch {
    0% {
      transform: translate(0);
    }
    20% {
      transform: translate(-2px, 2px);
    }
    40% {
      transform: translate(-2px, -2px);
    }
    60% {
      transform: translate(2px, 2px);
    }
    80% {
      transform: translate(2px, -2px);
    }
    100% {
      transform: translate(0);
    }
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .scroll-indicator {
    position: absolute;
    bottom: 2rem;
    left: 50%;
    transform: translateX(-50%);
    color: white;
    text-align: center;
    animation: bounce 2s infinite;
  }

  .arrow {
    width: 20px;
    height: 20px;
    border-right: 2px solid white;
    border-bottom: 2px solid white;
    transform: rotate(45deg);
    margin: 0 auto;
    margin-top: 10px;
  }

  @keyframes bounce {
    0%, 20%, 50%, 80%, 100% {
      transform: translateY(0);
    }
    40% {
      transform: translateY(-30px);
    }
    60% {
      transform: translateY(-15px);
    }
  }

  @media (max-width: 768px) {
    .glitch-text {
      font-size: 3rem;
    }

    .subtitle {
      font-size: 1.2rem;
    }
  }

  @media (max-width: 480px) {
    .glitch-text {
      font-size: 2.5rem;
    }

    .subtitle {
      font-size: 1rem;
    }
  }

  @media (max-height: 600px) {
    .scroll-indicator {
      display: none;
    }
  }
</style> 