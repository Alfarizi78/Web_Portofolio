---
import altaLogo from '../assets/alta.svg';
---

<nav class="navbar">
  <div class="nav-content">
    <div class="logo">
      <img src={altaLogo.src} alt="Alta Logo" width="80" height="80" />
    </div>
    <div class="menu">
      <a href="#home" class="menu-item">Home</a>
      <a href="#about" class="menu-item">About</a>
      <a href="#projects" class="menu-item">Projects</a>
      <a href="#skills" class="menu-item">Skills</a>
      <a href="#contact" class="menu-item">Contact</a>
    </div>
    <button class="mobile-menu-btn" aria-label="Menu">
      <span></span>
      <span></span>
      <span></span>
    </button>
  </div>
</nav>

<div class="mobile-menu">
  <a href="#home" class="mobile-menu-item">Home</a>
  <a href="#about" class="mobile-menu-item">About</a>
  <a href="#projects" class="mobile-menu-item">Projects</a>
  <a href="#skills" class="mobile-menu-item">Skills</a>
  <a href="#contact" class="mobile-menu-item">Contact</a>
</div>

<style>
  .navbar {
    position: fixed;
    top: 2rem;
    left: 50%;
    transform: translateX(-50%);
    z-index: 100;
    backdrop-filter: blur(10px);
    background: rgba(255, 255, 255, 0.1);
    border-radius: 100px;
    padding: 0.8rem 2rem;
    border: 1px solid rgba(255, 255, 255, 0.2);
  }

  .nav-content {
    display: flex;
    align-items: center;
    gap: 3rem;
  }

  .logo {
    display: flex;
    align-items: center;
    padding: 0.5rem;
  }

  .logo img {
    width: 80px;
    height: 80px;
    object-fit: contain;
    filter: brightness(0) invert(1);
    transition: all 0.4s ease;
    box-shadow: 0 0 20px rgba(255, 255, 255, 0.1);
    border-radius: 50%;
  }

  .logo img:hover {
    transform: scale(1.15) rotate(5deg);
    box-shadow: 0 0 30px rgba(255, 255, 255, 0.2);
  }

  .menu {
    display: flex;
    gap: 2rem;
  }

  .menu-item {
    color: white;
    text-decoration: none;
    position: relative;
    padding: 0.5rem 1rem;
    transition: all 0.3s ease;
    font-size: 1.1rem;
  }

  .menu-item::before {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    width: 0;
    height: 2px;
    background: linear-gradient(45deg, #ff0000, #ffd700);
    transition: width 0.3s ease;
  }

  .menu-item:hover::before {
    width: 100%;
  }

  .mobile-menu-btn {
    display: none;
    background: none;
    border: none;
    cursor: pointer;
    padding: 0.5rem;
  }

  .mobile-menu-btn span {
    display: block;
    width: 25px;
    height: 2px;
    background-color: white;
    margin: 6px 0;
    transition: all 0.3s ease;
  }

  .mobile-menu {
    display: none;
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100vh;
    background: rgba(0, 0, 0, 0.95);
    backdrop-filter: blur(10px);
    z-index: 99;
    padding: 6rem 2rem;
    flex-direction: column;
    align-items: center;
    gap: 2rem;
  }

  .mobile-menu.active {
    display: flex;
  }

  .mobile-menu-item {
    color: white;
    text-decoration: none;
    font-size: 1.5rem;
    position: relative;
    padding: 0.5rem 1rem;
  }

  @media (max-width: 768px) {
    .menu {
      display: none;
    }

    .mobile-menu-btn {
      display: block;
    }

    .navbar {
      width: 90%;
      padding: 0.8rem 1.5rem;
    }

    .logo img {
      width: 60px;
      height: 60px;
    }
  }

  @media (max-width: 480px) {
    .navbar {
      padding: 0.6rem 1rem;
    }

    .logo img {
      width: 50px;
      height: 50px;
    }
  }
</style>

<script>
  const mobileMenuBtn = document.querySelector('.mobile-menu-btn');
  const mobileMenu = document.querySelector('.mobile-menu');
  const mobileMenuItems = document.querySelectorAll('.mobile-menu-item');

  mobileMenuBtn?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('active');
    document.body.style.overflow = mobileMenu?.classList.contains('active') ? 'hidden' : '';
    
    const spans = mobileMenuBtn.querySelectorAll('span');
    spans[0].style.transform = mobileMenu?.classList.contains('active') ? 'rotate(45deg) translate(6px, 6px)' : '';
    spans[1].style.opacity = mobileMenu?.classList.contains('active') ? '0' : '1';
    spans[2].style.transform = mobileMenu?.classList.contains('active') ? 'rotate(-45deg) translate(8px, -8px)' : '';
  });

  mobileMenuItems.forEach(item => {
    item.addEventListener('click', () => {
      mobileMenu?.classList.remove('active');
      document.body.style.overflow = '';
      
      const spans = mobileMenuBtn?.querySelectorAll('span');
      if (spans) {
        spans[0].style.transform = '';
        spans[1].style.opacity = '1';
        spans[2].style.transform = '';
      }
    });
  });
</script> 