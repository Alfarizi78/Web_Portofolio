---
import altaLogo from '../assets/alta.svg';
interface Props {
	title?: string;
}

const { title = "Portfolio Website" } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		
		<!-- Favicon settings -->
		<link rel="icon" type="image/svg+xml" href={altaLogo.src} sizes="any" />
		<link rel="apple-touch-icon" href={altaLogo.src} />
		<link rel="icon" type="image/svg+xml" href={altaLogo.src} sizes="32x32" />
		<link rel="icon" type="image/svg+xml" href={altaLogo.src} sizes="96x96" />
		<link rel="icon" type="image/svg+xml" href={altaLogo.src} sizes="192x192" />
		
		<!-- Meta tags untuk favicon -->
		<meta name="msapplication-TileImage" content={altaLogo.src} />
		<meta name="msapplication-TileColor" content="#000000" />
		<meta name="theme-color" content="#000000" />
		
		<title>{title}</title>
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@300;400;500;600;700&display=swap" rel="stylesheet">
	</head>
	<body>
		<slot />
	</body>
</html>

<style is:global>
	* {
		margin: 0;
		padding: 0;
		box-sizing: border-box;
	}

	html {
		font-family: 'Space Grotesk', sans-serif;
		scroll-behavior: smooth;
	}

	body {
		background-color: #000;
		color: #fff;
		overflow-x: hidden;
	}

	::selection {
		background: #FFD700;
		color: #000;
	}

	@media (max-width: 768px) {
		html {
			font-size: 14px;
		}
	}

	@media (max-width: 480px) {
		html {
			font-size: 12px;
		}
	}

	/* Mencegah horizontal scroll */
	body {
		max-width: 100vw;
		overflow-x: hidden;
	}

	/* Memperbaiki tampilan pada landscape mode */
	@media (max-height: 600px) and (orientation: landscape) {
		.hero {
			min-height: 120vh;
		}
	}
</style>
